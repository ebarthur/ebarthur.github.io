---
type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <ul class="inline-flex gap-2">
      {tags.map((tag) => (
        <li>
          <code class="rounded-md bg-blue-100 px-1 dark:bg-neutral-800">
            {tag}
          </code>
        </li>
      ))}
    </ul>
  )
}
