---
import type { CollectionEntry } from "astro:content";

type Props = {
  posts: CollectionEntry<"writing">[];
};

const { posts } = Astro.props;
---

<div class="flex flex-col gap-2 text-sm">

  <div class="space-y-4 mt-8">
    {
      posts.map((post) => (
        <div>
          <a href={`/writing/${post.id}`} class="underline decoration-1 block">
            {post.data.title}
          </a>
          {post.data.description && (
            <p class="text-secondary mt-1">{post.data.description}</p>
          )}
        </div>
      ))
    }
  </div>

  <div class="mt-6">
    <a href="/writing" class="underline decoration-1">All writings</a>
    <p class="text-secondary mt-1">Some of my other thoughts spilled out</p>
  </div>
</div>
